				<Label 
					Content="Econ:" 
					HorizontalAlignment="Left" 
					Padding="5,0,0,0">
				</Label>
				<Label x:Name="Economy" 
					Content="0" 
					Padding="5,0,0,0">
				</Label>
				<StackPanel.ToolTip>
					<StackPanel>
						<ListView x:Name="EconomyGrowth" BorderBrush="{x:Null}" Background="{x:Null}">
							<ListView.ItemTemplate>
								<DataTemplate>
									<DockPanel Width="200">
										<TextBlock Text="{Binding Key}" Margin="0,5,0,0"></TextBlock>
										<TextBlock Text=":" Margin="0,5,5,0"></TextBlock>
										<TextBlock Text="{Binding Value.Value}" Margin="0,5,0,0" DockPanel.Dock="Right" HorizontalAlignment="Right"></TextBlock>
									</DockPanel>
								</DataTemplate>
							</ListView.ItemTemplate>
						</ListView>
						<DockPanel Width="200">
							<TextBlock Text="Sum:" Margin="0,0,5,0" FontWeight="Bold"></TextBlock>
							<TextBlock x:Name="EconomyGrowth_Sum" Text="{Binding Sum}" FontWeight="Bold" DockPanel.Dock="Right" HorizontalAlignment="Right"></TextBlock>
