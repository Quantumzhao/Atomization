						</DockPanel>
					</StackPanel>
				</StackPanel.ToolTip>
			</StackPanel>
			<StackPanel Orientation="Horizontal">
				<Label Content="Food: " Padding="5,0,0,0"></Label>
				<Label x:Name="Food" Content="0" Padding="5,0,0,0"></Label>
				<StackPanel.ToolTip>
					<StackPanel>
						<ListView x:Name="FoodGrowth" BorderBrush="{x:Null}" Background="{x:Null}">
							<ListView.ItemTemplate>
								<DataTemplate>
									<DockPanel Width="200">
