				Click="MenuItem_Click">
			</MenuItem>
			<MenuItem 
				Header="Domestic" 
				FontSize="15" 
				FontFamily="Segoe UI Semilight" 
				Padding="6,0" 
				Click="MenuItem_Click"/>
			<MenuItem 
				Header="Diplomacy" 
				FontSize="15" 
				FontFamily="Segoe UI Semilight" 
				Padding="6,0"
				Click="MenuItem_Click">
