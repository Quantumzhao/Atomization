		<Button Content="More Info" BorderBrush="Black" HorizontalContentAlignment="Center" Padding="8,5" Background="{x:Null}" Margin="0,14,127,0" Click="Button_MoreInfo_Click" FontSize="15" HorizontalAlignment="Right" VerticalAlignment="Top"/>
