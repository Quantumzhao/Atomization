			</StackPanel>
			<StackPanel Orientation="Horizontal" Width="Auto">
				<Label 
					Content="Stblty" 
					HorizontalAlignment="Left" 
					Padding="5,0">
				</Label>
				<ProgressBar x:Name="ProgBar_Stability" 
					Width="80" 
					Padding="0" 
					Margin="0,5" >
				</ProgressBar>
				<Label x:Name="Stability" 
					Content="100" 
					HorizontalAlignment="Left" 
					Padding="5,0,0,0">
				</Label>
				<Label 
					Content="/" 
					HorizontalAlignment="Left" 
					Padding="0,0">
				</Label>
				<Label 
					Content="100" 
					HorizontalAlignment="Left" 
					Padding="0">
				</Label>
				<StackPanel.ToolTip>
					<StackPanel>
						<ListView x:Name="StabilityGrowth" BorderBrush="{x:Null}" Background="{x:Null}">
							<ListView.ItemTemplate>
