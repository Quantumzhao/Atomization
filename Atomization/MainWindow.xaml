					</StackPanel>
				</StackPanel.ToolTip>
			</StackPanel>
			<StackPanel 
				Orientation="Horizontal">
				<Label 
					Content="Navy:" 
					HorizontalAlignment="Left" 
					Padding="5,0,0,0">
				</Label>
				<Label x:Name="Navy" 
					Content="0" 
