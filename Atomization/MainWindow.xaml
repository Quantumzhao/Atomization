			</ListBoxItem>
		</ComboBox>
		<Label 
			Content="Actions" 
			HorizontalAlignment="Left" 
			Margin="265,14,0,0" 
			VerticalAlignment="Top" 
			FontSize="25" 
			FontWeight="Bold" 
			Padding="5,0,5,5">
		</Label>
		<Frame 
			x:Name="MainFrame" 
			Content="Frame" 
			Margin="265,86,10.5,24.5" 
			Source="/Atomization;component/UI/Nuclear.xaml" 
			NavigationUIVisibility="Hidden">
		</Frame>
		<Menu 
			x:Name="MainMenu" 
			HorizontalAlignment="Left" 
			Margin="261,52,0,0" 
			VerticalAlignment="Top" 
			Width="627" 
			Background="{x:Null}" 
			Grid.ColumnSpan="2">
			<MenuItem 
				Header="Nuclear" 
				FontSize="15" 
				FontFamily="Segoe UI Semilight" 
				Padding="6,0" 
				Click="MenuItem_Click"/>
			<MenuItem 
				Header="Operations" 
				FontSize="15" 
				FontFamily="Segoe UI Semilight" 
				Padding="6,0" 
				Click="MenuItem_Click"/>
			<MenuItem 
				Header="Intelligence" 
