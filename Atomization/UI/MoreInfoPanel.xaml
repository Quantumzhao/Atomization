<Window x:Class="Atomization.MoreInfoPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Atomization"
        mc:Ignorable="d"
        Title="MoreInfoPanel" Height="450" Width="320" WindowStartupLocation="CenterScreen">
	<Window.Resources>
		<Style x:Key = "TitleStyle" TargetType = "Label">
			<Setter Property = "Height" Value = "Auto" />
			<Setter Property = "Width" Value = "Auto" />
			<Setter Property = "Foreground" Value = "Black" />
			<Setter Property = "FontSize" Value = "15" />
			<Setter Property = "Margin" Value = "0,10" />
		</Style>
	</Window.Resources>
	<Grid>
		<Label Content="Information" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Segoe UI Light"/>
		<ScrollViewer Margin="0,52,0,0.5" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
			<StackPanel x:Name="InfoPanel">

			</StackPanel>
		</ScrollViewer>
		<Menu HorizontalAlignment="Right" Margin="0,14,10,0" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="Black">
			<MenuItem Header="Other Info" FontFamily="Segoe UI Semilight" FontSize="15" BorderBrush="Black" Padding="5">
			</MenuItem>
		</Menu>
	</Grid>
</Window>
